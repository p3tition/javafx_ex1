<VBox alignment="CENTER" prefHeight="400.0" prefWidth="720.0" spacing="20.0" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx_ex1.HelloController">
